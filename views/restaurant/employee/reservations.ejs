<%- include('../../partials/header') %>

<div class="container" style="padding-bottom: 100px;">
    <div class="col-md-12">
        <h2>Reservations</h2>
        <% for(var i = orders.length-1; i >= 0; i--){ %>

                <div class="col-md-9" style="border-bottom: 1px solid #cccccc; padding-bottom: 15px;">
                    <div class="order-history-item-left" style="padding-top: 15px;">
                        <div class="order-history-name">
                            Guest: <%= reservations[i].Customer_name %>
                        </div>
                        <div class="order-history-payment">
                            Seats: <%= reservations[i].Guest_count %>
                        </div>
                    </div>
    
                    <div class="order-history-item-right" style="padding-top: 15px;">
                        <div class="order-history-date">
                                <%= reservations[i].Date %>
                        </div>
                    </div>
                </div>
        <% } %>
    </div>
</div>

<%- include('../../partials/footer') %>
