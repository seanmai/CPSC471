<%- include('../../partials/header') %>

<div class="row">
    <h1 style="text-align: center; width: 100%;"><%= restaurant.Name %></h1>
    <div style="width: 30%; margin: 25px auto;">
            <form action="/restaurants/<%= restaurant.Rstrnt_id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" value="<%= restaurant.Name %>">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="location" value="<%= restaurant.Location %>">
            </div>
            <div class="form-group">
                <label for="rate">Average Rate</label>
                <input class="form-control" type="number" name="rate" value="<%= restaurant.Avg_rate %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
</div>

<%- include('../../partials/footer') %>