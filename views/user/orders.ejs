<%- include('../partials/header') %>

<div class="container">
    <% if(orders){ %>
        <div class="col-sm-6 col-md-12">
            <h2>Order History</h2>
            <div class="col-md-9">
            <% for(var i = orders.length-1; i >= 0; i--){ %>
                <div class="order-history-item">
                        <div class="order-history-item-left">
                            <div class="order-history-name">
                                <%= orders[i].Name %>
                            </div>
                            <div class="order-history-payment">
                                <%= orders[i].Pay_method %>
                            </div>
                        </div>
                        
                        <div class="order-history-item-right">
                            <div class="order-history-date">
                                <%= orders[i].Date %>
                            </div>
                            <div class="order-history-type">
                                <%= orders[i].Order_type %>
                            </div>
                            <div class="order-history-type">
                                <%= orders[i].Address %>
                            </div>
                        </div>
                    </div>
            <% } %>
            </div>
        </div>
    <% } else { %>
        <div class="col-sm-6 col-md-6">
            <h2>You have not placed any orders</h2>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>